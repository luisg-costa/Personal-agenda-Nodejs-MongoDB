<%- include('includes/head') %>
    <%- include('includes/nav') %>

        <section class="container">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8 my-5">
                    <h1 class="display-3 text-center">Contact</h1>
                    <%- include('includes/messages') %>
                    <div class="row">
                        <div class="col-lg my-5">
                            <h5 class="text-center">Create or edit contact</h5>
                            <% if(contact._id) { %>
                                <form action="/contact/edit/<%= contact._id %>" method="POST">
                             <% } else { %>
                                <form action="/contact/create" method="POST">
                                <% } %>   
                            
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="my-3">
                                    <label for="name" class="form-label">First name</label>
                                    <input value="<%= contact.name %>" type="text" class="form-control" id="name" name="name">   
                                </div>
                                <div class="my-3">
                                    <label for="lastname" class="form-label">Last name</label>
                                    <input value="<%= contact.lastname %>" type="text" class="form-control" id="lastname" name="lastname">   
                                </div>
                                <div class="my-3">
                                    <label for="tel" class="form-label">Phone</label>
                                    <input value="<%= contact.tel %>" type="tel" class="form-control" id="tel" name="tel">   
                                </div>
                                <div class="my-3">
                                    <label for="email" class="form-label">Email address</label>
                                    <input value="<%= contact.email %>" type="email" class="form-control" id="email" name="email">   
                                </div>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2"></div>
            </div>
        </section>

        <%- include('includes/footer') %>